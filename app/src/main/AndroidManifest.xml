<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permiso para acceder a Internet, necesario para streaming de video -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Indica que la aplicación puede funcionar sin pantalla táctil -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" /> <!-- Indica que la aplicación está diseñada para dispositivos Android TV -->
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:banner="@mipmap/ic_banner"
        android:icon="@mipmap/ic_channel"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FullTV.tv">

        <activity
            android:name=".ui.otras.MainFragment"
            android:exported="false" />
        <activity
            android:name=".PlayerActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
        <!-- Actividad principal (MoviesPrincipal) configurada para TV -->
        <activity
            android:name=".ui.otras.Main"
            android:exported="true"

            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- Esta categoría asegura que la actividad se lance desde el launcher de TV -->
                <category android:name="android.intent.category.LAUNCHER" />
                <!-- Esta categoría es necesaria para aparecer en el launcher de Android TV -->
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity> <!-- Actividad para el reproductor de video -->
        <!-- Actividad para el reproductor de video -->

    </application>

</manifest>