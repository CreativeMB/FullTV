<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C4C4C"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Pedidos"
        android:textColor="@android:color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/textViewSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Nombre, WhatsApp, Nombre pelicula, Año"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/butMicrofono"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@drawable/mic"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/texpedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Luis Ramirez, +573058745821, Buscando a Nemo, Año 2003"
            android:maxLines="8"
            android:minLines="4"
            android:padding="16dp"
            android:textColor="#0091EA"
            android:textColorHint="#989898" />
    </LinearLayout>

    <Button
        android:id="@+id/butpedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/colorFocused"
        android:padding="16dp"
        android:text="Enviar"
        android:textColor="@android:color/white" />
</LinearLayout>
